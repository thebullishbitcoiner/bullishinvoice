{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "html"
  ],
  "ignorePatterns": [
    "assets/*",
    "node_modules/*",
    "dist/*"
  ],
  "rules": {
    "indent": "off",
    "linebreak-style": "off",
    "quotes": "off",
    "semi": "off",
    "no-unused-vars": "warn",
    "no-console": "off"
  },
  "globals": {
    "window": "readonly",
    "document": "readonly",
    "__APP_VERSION__": "readonly"
  }
}
